<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(snippet) -%>">
  <span class='title'>
    <%= snippet.title %>

  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_snippets_admin_snippet_path(snippet),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.snippets_admin_snippet_path(snippet),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :data => {:confirm => t('message', :scope => 'refinery.admin.delete', :title => snippet.title)},
        :method => :delete %>
  </span>
</li>
